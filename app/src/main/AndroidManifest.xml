<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexjlockwood.transitions.custom" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.alexjlockwood.transitions.custom.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alexjlockwood.transitions.custom.ChildActivity"
            android:label="@string/title_activity_child"
            android:parentActivityName="com.alexjlockwood.transitions.custom.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.alexjlockwood.transitions.custom.MainActivity" />
        </activity>
    </application>

</manifest>
