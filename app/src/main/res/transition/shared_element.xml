<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
               android:transitionOrdering="together">
    <transition class="com.alexjlockwood.transitions.custom.Recolor">
        <targets>
            <target
                android:targetId="@id/hello_world"
                android:targetName="@string/hello_world"/>
        </targets>
    </transition>
    <changeBounds>
        <targets>
            <target
                android:targetId="@id/hello_world"
                android:targetName="@string/hello_world"/>
        </targets>
    </changeBounds>
    <transition class="com.alexjlockwood.transitions.custom.TextSizeTransition">
        <targets>
            <target
                android:targetId="@id/hello_world"
                android:targetName="@string/hello_world"/>
        </targets>
    </transition>
</transitionSet>